<% @page_title = "Lunch on Rais | Signup" %>
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:worker, :url => {:controller => 'workers', :action => 'create'}) do |f| %>
    <p> Username:</br> <%= f.text_field :workername%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @worker.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @worker.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>